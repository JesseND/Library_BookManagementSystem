<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
<field name="bookname">
	<field-validator type="requiredstring">
		<message>The bookname can not be empty!</message>
	</field-validator>
</field>
<field name="author">
	<field-validator type="requiredstring">
		<message>The author name can not be empty!</message>
	</field-validator>
</field>
<field name="bookcounts">
	<field-validator type="int">
		<param name="min">1</param>
		<param name="max">20</param>
		<message>The age must between 1 and 20</message>
	</field-validator>
</field>
<field name="introduction">
	<field-validator type="requiredstring">
		<message>The author name can not be empty!</message>
	</field-validator>
</field>
