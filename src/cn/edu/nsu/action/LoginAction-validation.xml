<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
        
        <validators>
          <field name="username">
            <field-validator type="required">
              <message>The username can't be empty</message>
            </field-validator>
          </field>
          <field name="password">
           <field-validator type="required">
            <message>The password can't be empty</message>
           </field-validator>
          </field>
        </validators>